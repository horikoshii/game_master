<div class="container">
  <h4>プラットフォーム登録</h4>
  <div style="text-align:center;">
    <div class="row">
      <div class="col-lg-12">
        <%= form_with model: @platform, url: admin_platforms_path,method: :post do |f| %>
        <table class="table table-striped">
          <tr>
            <td>プラットフォーム名</td>
            <td><%= f.text_field :name %></td>
          </tr>

          <tr>
           <td><%= f.submit '新規登録' %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>