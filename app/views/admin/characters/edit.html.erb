<div class="container">
  <div style="text-align:center;">
    <div class="row">
      <div class="col-lg-12">
        <%= form_with model: @character, url: admin_character_path,method: :patch do |f| %>
        <table class="table table-striped">
          <tr>
            <td><h4>キャラクター登録</h4></td>
          </tr>

          <tr>
            <td><%= f.radio_button :IFF_method, Character.iff_methods.key(0) %>
            <%= f.label :IFF_method, Character.iff_methods_i18n[:enemy] %></td>
            <td><%= f.radio_button :IFF_method, Character.iff_methods.key(1) %>
            <%= f.label :IFF_method, Character.iff_methods_i18n[:ally]%></td>
          </tr>
          <tr>
            <td>キャラクター名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><h8>属性</h8></td>
            <td>
              <%= f.radio_button :attribution_method, Character.attribution_methods.key(0) %>
              <%= f.label :attribution_method, Character.attribution_methods_i18n[:fire] %>
            </td>
            <td>
              <%= f.radio_button :attribution_method, Character.attribution_methods.key(1) %>
              <%= f.label :attribution_method, Character.attribution_methods_i18n[:water] %>
            </td>
            <td>
              <%= f.radio_button :attribution_method, Character.attribution_methods.key(2) %>
              <%= f.label :attribution_method, Character.attribution_methods_i18n[:nature] %>
            </td>
          </tr>
          <tr>
            <td>必殺技</td>
            <td><%= f.text_field :skill %></td>
          </tr>
          <tr>
            <td>必殺技 詳細</td>
            <td><%= f.text_area :skill_detail %></td>
          </tr>

          <tr>
           <td><%= f.submit '更新' %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>