<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <tr>
          <td><h4>タイトル一覧</h4></td>
          <td>
            <%= link_to new_admin_title_path do %>
            <i class="fa-solid fa-circle-plus"><span>new</span></i>
            <% end %>
            </td>
        </tr>
        <tr>
          <td>
            <% @titles.each do |title| %>
            <p><%= link_to title.name, admin_title_path(title.id) %></p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>