<%= render 'admin/titles/title', { title: @title } %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <tr>
          <td><h4><%= @title.name %></h4></td>
          <td>
            <%= link_to edit_admin_title_path do %>
            <i class="fa-solid fa-circle-plus"><span>edit</span></i>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <table class="table table-striped">
        <h4>最新情報</h4>
        <% @informations.each do |information| %>
        <tr>
          <td><%= link_to information.name, admin_title_information_path(@title, information) %></td>
          <td><%= l information.created_at %></td>
        </tr>
        <% end %>
      </table>
      <%= link_to "もっと表示させる", admin_title_informations_path(@title) %>
      <%= paginate @informations, :param_name => 'information_page' %>
    </div>
    <div class="col-lg-5">
      <table class="table table-striped">
        <h4>攻略一覧</h4>
        <% @cheats.each do |cheat| %>
        <tr>
          <td><%= link_to cheat.name, admin_title_cheat_path(@title, cheat) %></td>
          <td><%= l cheat.created_at %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @cheats, :param_name => 'cheat_page' %>
      <%= link_to "もっと表示させる", admin_title_cheats_path(@title) %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <tr>
          <h4>キャラクター一覧</h4>
        </tr>
        <tr>
          <td>敵味方</td>
          <td>名前</td>
        </tr>
        <% @characters.each do |character| %>
        <tr>
          <td><%= character.iff_method_i18n %></td>
          <td><%= link_to character.name, admin_title_character_path(@title, character.id) %></td>
          <td><%= l character.created_at %></td>
        </tr>
        <% end %>
      </table>
      <%= link_to "もっと表示させる", admin_title_characters_path(@title) %>
      <%= paginate @characters, :param_name => 'character_page' %>
    </div>
  </div>
</div>