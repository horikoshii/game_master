<%= render 'admin/titles/title', { title: @title } %>
<div class="container">
  <div style="text-align:center;">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-striped">
          <div class="cheat">
            <h4><%= @cheat.name %>詳細</h4>
          </div>
            <tr>
              <td>難易度</td>
              <td>
                <div id="star-rate-<%= @cheat.id %>">
                </div>
              </td>
            </tr>
            <tr>
              <td>ボス名</td>
              <td><%= @enemy.name %></td>
            </tr>
            <tr>
              <td>攻略内容</td>
              <td><%= @cheat.cheat_detail %></td>
            </tr>
            <tr>
              <td>攻略推奨キャラクター</td>
              <td><%= @ally.name %></td>
            </tr>
        </table>

        <script>
          $('#star-rate-<%= @cheat.id %>').raty({
            size: 36,
            starOff: "<%= asset_path('star-off.png') %>",
            starOn: "<%= asset_path('star-on.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            half: true,
            readOnly: true,
            score: <%= @cheat.evaluation %>,
          });
        </script>
      </div>
    </div>
  </div>
</div>