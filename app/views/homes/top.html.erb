<header class="p-1 mb-1 bg-info text-white">
 <nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
   <div class="navbar-brand p-1">
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
     <ul class="navbar-nav ml-auto">
         <% @platforms.each do |platform| %>
      <li class="nav-item">
          <%= link_to(serch_path(platform_id: platform.id),  class: 'nav-link text-white') do %>
          <strong> <%= platform.name %> </strong>
          <% end %>
         <% end %>
      </li>
     </ul>
    </div>
   </div>
  </div>
 </nav>
</header>
<div class="container">
 <div class="row">
  <div class="col-lg-4">
    <table class="table table-striped">
     <tr>
      <td>
       <% @titles.each do |title| %>
       <p><%= link_to title.name, title_path(title.id) %></p>
       <% end %>
      </td>
     </tr>
    </table>
  </div>
 </div>
</div>