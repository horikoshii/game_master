<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <tr>
        <td class="user_image">
          <% if @customer.image.attached? %>
          <%= image_tag @customer.image, size: "200x200"  %>
          <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
        </td>
      </tr>
    </div>
    <div class="my_page">
        <div class="label">ID:<%= @customer.id %></div>
    </div>
    <div class="my_page">
        <div class="label"><%= @customer.name %></div>
    </div>
    <div class="my_page">
        <div class="label"><%= button_to "編集", edit_customer_path(@customer.id),method: :get %></div>
    </div>

      <tr>
        <td><%= @customer.profile %></td>
      </tr>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <tr>
        <td>
          コメント一覧
        </td>
      </tr>
    </div>
  </div>
</div>