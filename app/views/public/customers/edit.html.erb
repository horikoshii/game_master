<div class="container">
  <div class="row">
    <%= form_with model: @customer, url:customer_path(@customer.id),method: :PATCH do |f| %>
    <div class="my_page">
      <div class="label"><%= f.file_field :image, accept: "image/*" %></div>
    </div>
    <div class="my_page">
        <div class="label">ID:<%= @customer.id %></div>
    </div>
    <div class="my_page">
        <div class="label">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :name %>
        </div>
    </div>
    <div class="my_page">
        <div class="label">
          <div class="set"><%= f.submit '編集内容を保存',class: "btn btn-secondary" %></div>
          <div class="set"><%= link_to "退会", customers_unsubscribe_path,class: "btn btn-secondary" %></div>
        </div>
    </div>

    <div class="profile">
      <div class="label">
        <%= f.label :自己紹介文 %>
          <%= f.text_area :profile %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <tr>
        <td>
          コメント一覧
        </td>
      </tr>
    </div>
  </div>
</div>