<div class="container">
  <div class="row">
    <table class="table table-striped">
    <%= form_with model: @customer, url: customer_path(@customer.id),method: :PATCH do |f| %>
    <div class="col-lg-3">
        <div class="user_image">
          <% if @customer.image.attached? %>
          <%= image_tag @customer.image, size: "150x150"  %>
          <% else %>
          <%= image_tag 'no_image', size: "150x150" %>
          <% end %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
    </div>
    <div class="col-lg-3">
     <div class="edit">
        <div class="edit-label">ID:<%= @customer.id %></div>
        <div class="edit-label"><%= f.text_field :name %></div>
     </div>
    </div>
    <div class="col-lg-1">
       <div class="set"><%= f.submit '編集内容を保存',class: "btn btn-secondary" %></div>
       <div class="set1"><%= link_to "退会", customers_unsubscribe_path,class: "btn btn-secondary" %></div>
    </div>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="profile_">
          <div class="label">
           <%= f.label :自己紹介文 %>
           <%= f.text_area :profile %>
          </div>
      </div>
    </div>
    <% end %>
  </div>