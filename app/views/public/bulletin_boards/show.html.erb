<%= render 'public/titles/title', { title: @title } %>

<% content_for(:name, @bulletin_board.name) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>title<%#= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-12'>
              <h3 class="d-inline"><%= @bulletin_board.name %></h3>
              <%= render 'crud_menus', bulletin_board: @bulletin_board %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @bulletin_board.customer.name %></li>
                <li class="list-inline-item"><%= l @bulletin_board.created_at, format: :long  %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@bulletin_board.body) %></p>
        </div>
      </article>
    </div>
  </div>

  <%= render 'public/comments/form', { bulletin_board: @bulletin_board, comment: @comment } %>

  <%= render 'public/comments/comments', { comments: @comments } %>
</div>