<%= render 'public/titles/title', { title: @title } %>
<div class="box">
  <h4 class="information_title">最新情報</h4>
  <div>
    <table class="table table-striped">
      <% @informations.each do |information| %>
        <tr>
          <td>
            <div class="information_box">
              <div class="information"><%= link_to information.name, title_information_path(title_id: @title.id, id: information.id) %></div>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= paginate @informations, :param_name => 'information_page' %>
</div>